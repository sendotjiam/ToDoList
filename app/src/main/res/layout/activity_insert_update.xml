<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".InsertUpdateActivity">

    <TextView
        android:id="@+id/tv_insert_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Insert Todo"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_insert_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Insert Todo"
        android:layout_below="@id/tv_insert_update_title"
        android:layout_marginTop="16dp"
        android:hint="Insert todo title"
        />

    <EditText
        android:id="@+id/et_insert_update_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Insert Todo"
        android:layout_below="@id/et_insert_update_title"
        android:layout_marginTop="16dp"
        android:hint="Insert todo title"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ok"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>